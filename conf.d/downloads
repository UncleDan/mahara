#!/bin/bash -ex

dl() {
    [ "$FAB_HTTP_PROXY" ] && PROXY="--proxy $FAB_HTTP_PROXY"
    cd $2; curl -L -f -O $PROXY $1; cd -
}

VERSION="22.04"
SUBVERSION="3"
FULL_VERSION="$VERSION.$SUBVERSION"
URL="https://github.com/MaharaProject/mahara/archive/refs/tags/$FULL_VERSION_RELEASE.tar.gz"
# URL="https://launchpad.net/mahara/$VERSION/$FULL_VERSION/+download/mahara-$FULL_VERSION.tar.gz"

dl $URL /usr/local/src

